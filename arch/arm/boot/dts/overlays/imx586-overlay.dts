// Definitions for IMX586 camera module on VC I2C bus
/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>

/{
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&i2c_vc>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			imx586: imx586@10 {
				compatible = "sony,imx586";
				reg = <0x34>;
				reg2 = <0x20>;
				status = "okay";

				clocks = <&imx586_clk>;
				clock-names = "xclk";

				VANA1-supply = <&imx586_vana1>;	/* 2.8v */
				VANA2-supply = <&imx586_vana2>;	/* 1.8v */
				VDIG-supply = <&imx586_vdig>;	/* 1.8v */
				VDDL-supply = <&imx586_vddl>;	/* 1.1v */

				imx586_clk: camera-clk {
					compatible = "fixed-clock";
					#clock-cells = <0>;
					clock-frequency = <24000000>;
				};

				port {
					imx586_0: endpoint {
						remote-endpoint = <&csi1_ep>;
						clock-lanes = <0>;
						data-lanes = <1 2>;
						clock-noncontinuous;
						link-frequencies =
							/bits/ 64 <297000000>;
					};
				};
			};
		};
	};

	fragment@1 {
		target = <&csi1>;
		__overlay__ {
			status = "okay";

			port {
				csi1_ep: endpoint {
					remote-endpoint = <&imx586_0>;
				};
			};
		};
	};

	fragment@2 {
		target = <&i2c0_pins>;
		__dormant__ {
			brcm,pins = <28 29>;
			brcm,function = <4>; /* alt0 */
		};
	};
	fragment@3 {
		target = <&i2c0_pins>;
		__overlay__ {
			brcm,pins = <44 45>;
			brcm,function = <5>; /* alt1 */
		};
	};
	fragment@4 {
		target = <&i2c0_pins>;
		__dormant__ {
			brcm,pins = <0 1>;
			brcm,function = <4>; /* alt0 */
		};
	};
	fragment@5 {
		target = <&i2c_vc>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@6 {
		target-path="/";
		__overlay__ {
			imx586_vana1: fixedregulator@0 {
				compatible = "regulator-fixed";
				regulator-name = "imx586_vana1";
				regulator-min-microvolt = <2800000>;
				regulator-max-microvolt = <2800000>;
			};
			imx586_vana2: fixedregulator@1 {
				compatible = "regulator-fixed";
				regulator-name = "imx586_vana2";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
			};
			imx586_vdig: fixedregulator@2 {
				compatible = "regulator-fixed";
				regulator-name = "imx586_vdig";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
			};
			imx586_vddl: fixedregulator@3 {
				compatible = "regulator-fixed";
				regulator-name = "imx586_vddl";
				regulator-min-microvolt = <1100000>;
				regulator-max-microvolt = <1100000>;
			};
		};
	};

	fragment@7 {
		target-path="/__overrides__";
		__overlay__ {
			cam0-pwdn-ctrl = <&imx586_vana>,"gpio:0";
			cam0-pwdn      = <&imx586_vana>,"gpio:4";
		};
	};

	__overrides__ {
		i2c_pins_0_1 = <0>,"-2-3+4";
		i2c_pins_28_29 = <0>,"+2-3-4";
	};
};
